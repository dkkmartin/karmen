---
const { class: className } = Astro.props;
---

<script>
  const crumb4 = document.querySelector('.pointer--4');
  const crumb3 = document.querySelector('.pointer--3');
  if (document.URL.includes('karmen/betaling')) {
    crumb3.classList.remove('current');
    crumb4.classList.add('current');
  }
</script>

<section class={className}>
  <a href="/karmen/" class="pointer pointer--1" id="first">
    <div>
      <i class="fa-solid fa-house" style="color: #8093A7;"></i>
      <span>Forside</span>
    </div></a
  >
  <a href="/karmen/produkter/" class="pointer pointer--2">
    <div>
      <i class="fa-solid fa-bag-shopping" style="color: #8093A7;"></i>
      <span>Produkter</span>
    </div></a
  >
  <a href="/karmen/kurv/" class="pointer pointer--3 current">
    <div>
      <i class="fa-solid fa-cart-plus" style="color: #8093A7;"></i>
      <span>Kurv</span>
    </div></a
  >
  <a href="/karmen/betaling/" class="pointer pointer--4" id="last">
    <div>
      <i class="fa-solid fa-credit-card" style="color: #8093A7;"></i>
      <span>Betaling</span>
    </div></a
  >
</section>

<style>
  section {
    max-width: 1000px;
    max-height: 80px;
  }

  .fa-cart-plus {
    padding: 0;
  }

  div {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }

  a {
    color: #8093a7;
    font-family: verdana;
    font-size: 1.2em;
    font-weight: 600;
    text-decoration: none;
  }
  section {
    width: 80%;
    margin: 4em auto;
    display: grid;
    grid: 1fr / repeat(4, 1fr);
    gap: 1%;
  }
  .pointer {
    height: 80px;
    position: relative;
    background: #f3f5fa;
    display: grid;
    place-items: center;
  }
  .pointer:before {
    content: '';
    position: absolute;
    left: 0px;
    bottom: 0;
    width: 0;
    height: 0;
    border-left: 30px solid white;
    border-top: 40px solid transparent;
    border-bottom: 40px solid transparent;
  }
  #first:before {
    border-left: none;
  }
  #first {
    border-bottom-left-radius: 16px;
    border-top-left-radius: 16px;
  }

  .pointer:after {
    content: '';
    position: absolute;
    right: -29px;
    bottom: 0;
    width: 0;
    height: 0;
    border-left: 30px solid #f3f5fa;
    border-top: 40px solid transparent;
    border-bottom: 40px solid transparent;
    z-index: 1;
  }
  #last:after {
    border-left: none;
  }
  #last {
    border-bottom-right-radius: 16px;
    border-top-right-radius: 16px;
  }
  .current,
  .pointer:hover {
    background: #f9c4d2;
    color: #fff;
  }
  .current:after,
  .pointer:hover:after {
    border-left: 30px solid #f9c4d2;
  }
</style>
