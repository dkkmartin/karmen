---
const { title, class: className } = Astro.props;
---

<button class={className}>{title}</button>

<style>
  button {
    background: linear-gradient(226.96deg, #ffe9e9 27.89%, #f9c4d2 83.86%);
    box-shadow: 0px 20px 40px rgba(13, 18, 39, 0.3);
    border: none;
    padding: 1em 2em;
    border-radius: 50px;
    cursor: pointer;
    transition: 0.3s;
    font-weight: 400;
  }

  button:hover {
    transform: scale(1.35);
    box-shadow: 0px 15px 40px rgba(0, 0, 0, 0.3);
  }
</style>
