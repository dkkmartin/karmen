---
import StartLayout from '../layouts/StartLayout.astro';
import Gallery from '../layouts/Gallery.astro';
import TilTopKnap from '../components/TilTopKnap.astro';
import { Image, Picture } from '@astrojs/image/components';
import plante from '../assets/plante_3.png';
import staffeli from '../assets/staffeli.png';
import kurv from '../assets/kurv.png';
import ugle from '../assets/ugle.png';
import krokodille from '../assets/krokodille.png';
import Button from '../components/Button.astro';
---

<StartLayout
  title={'Bæredygtige Træprodukter og Miljøvenlige Valg - Karmen Webshop'}
  description={'Udforsk vores udvalg af bæredygtige træprodukter og miljøvenlige valg på Karmen Webshop. Vi tilbyder en bred vifte af produkter, herunder mini staffelier, sukkulenter, kurve, ugler og krokodiller, alt sammen lavet af bæredygtigt træ. Vores sortiment kombinerer æstetik, funktionalitet og en bevidsthed om miljøet. Vælg vores produkter med tillid, da de er skabt med omtanke for både mennesker og planeten. Oplev bæredygtig stil og kvalitet. Køb nu!'}
>
  <TilTopKnap />
  <div class="padding--120px">
    <section class="section__products">
      <h1>Alle <span>produkter</span></h1>
      <div class="products__con">
        <div class="product__item__con">
          <div class="product__image__con">
            <Image
              src={staffeli}
              alt="Karmen mini staffeli"
              format={'webp'}
              width={201}
              height={250}
            />
          </div>
          <p class="--bold">Mini staffeli</p>
          <div class="product__price__con">
            <p class="--faded">95 kr</p>
            <p>30 kr</p>
          </div>
          <a href="/karmen/products/staffeli/"><Button class="read__btn" title={'Læs mere'} /></a>
        </div>
        <div class="product__item__con">
          <div class="product__image__con">
            <Image
              src={plante}
              alt="Karmen sukkulent plante"
              format={'webp'}
              width={188}
              height={250}
            />
          </div>
          <p class="--bold">Sukkulent</p>
          <div class="product__price__con">
            <p class="--faded">150 kr</p>
            <p>50 kr</p>
          </div>
          <a href="/karmen/products/sukkulent/"><Button class="read__btn" title={'Læs mere'} /></a>
        </div>
        <div class="product__item__con">
          <div class="product__image__con">
            <Image src={kurv} alt="Karmen træ kurv" format={'webp'} width={250} height={216} />
          </div>
          <p class="--bold">Kurv</p>
          <p>30 kr</p>
          <a href="/karmen/products/kurv/"><Button class="read__btn" title={'Læs mere'} /></a>
        </div>
        <div class="product__item__con">
          <div class="product__image__con">
            <Image src={ugle} alt="Karmen træ ugle" format={'webp'} width={128} height={250} />
          </div>
          <p class="--bold">Ugle</p>
          <p>50 kr</p>
          <a href="/karmen/products/ugle/"><Button class="read__btn" title={'Læs mere'} /></a>
        </div>
        <div class="product__item__con">
          <div class="product__image__con">
            <Image
              src={krokodille}
              alt="Karmen træ krokodille"
              format={'webp'}
              width={250}
              height={58}
            />
          </div>
          <p class="--bold">krokodille</p>
          <p>65 kr</p>
          <a href="/karmen/products/krokodille/"><Button class="read__btn" title={'Læs mere'} /></a>
        </div>
      </div>
    </section>
    <Gallery />
  </div>
</StartLayout>

<style>
  .padding--120px {
    padding-top: 0;
  }

  .section__products {
    background-color: var(--primary-bg-color);
    padding-bottom: 243px;
  }

  .products__con {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 2em;
    row-gap: 6.2em;
    padding: 0 8.5em;
  }

  .product__item__con {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .product__image__con {
    background-color: var(--primary-bg-color-pink);
    height: 370px;
    width: 370px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product__price__con {
    display: flex;
    gap: 0.5em;
  }

  .--bold {
    font-weight: 600;
    font-size: 18px;
    padding-top: 1em;
  }

  .--faded {
    text-decoration: line-through;
    opacity: 30%;
  }

  .read__btn {
    margin-top: 1em;
  }

  h1 {
    font-size: 48px;
    padding: 3.1em 0 1.8em 2.8em;
    margin: 0;
  }

  span {
    font-weight: 300;
  }

  p {
    margin: 0.3em 0;
  }

  @media only screen and (max-width: 1024px) {
    .section__products h1 {
      padding: 2em 20px 0 20px;
      font-size: 20px;
    }

    .section__products {
      padding-bottom: 4em;
    }

    .products__con {
      padding: 2em 20px 0 20px;
      display: flex;
      flex-direction: column;
    }

    .product__image__con {
      height: 320px;
      width: 320px;
    }
  }

  @media only screen and (max-width: 1440px) {
    .products__con {
      grid-template-columns: repeat(auto-fit, minmax(370px, 1fr));
    }
  }
</style>
