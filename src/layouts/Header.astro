---
import '../styles/global.css'
import logo from '../assets/karmen-logo-sort.png'
import {Image, Picture} from '@astrojs/image/components'
---

<header id="top">
  <Image format={'webp'} src={logo} width={117} height={50} alt="Logo for Karmen webshop" />
  <nav>
    <ul>
      <li class="active__header"><a href="">Forside</a></li>
      <li><a href="">Produkter</a></li>
      <li><a href="">Mere info</a></li>
      <li><a href=""><i class="fa-solid fa-cart-plus"></i>Kurv</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: var(--primary-bg-color-pink);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    height: 60px;
    max-width: 1440px;
    margin: 0 auto;
  }

  ul {
    padding: 0;
    margin: 0;
    display: flex;
    gap: 4em;
    font-weight: 500;
  }

  .li {
    width: 120px;
  }

  .active__header {
    border-bottom: 6px solid var(--secondary-bg-color);
  }
</style>