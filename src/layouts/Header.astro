---
import '../styles/global.css';
import logo from '../assets/karmen-logo-sort.png';
import { Image, Picture } from '@astrojs/image/components';
---

<header id="top">
  <Image format={'webp'} src={logo} width={117} height={50} alt="Logo for Karmen webshop" />
  <nav>
    <ul>
      <li><a href="/karmen/">Forside</a></li>
      <li><a href="/karmen/produkter/">Produkter</a></li>
      <li><a href="">Mere info</a></li>
      <li><a href=""><i class="fa-solid fa-cart-plus"></i>Kurv</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: var(--primary-bg-color-pink);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    height: 60px;
    max-width: 1440px;
    margin: 0 auto;
  }

  nav {
    display: flex;
    align-items: center;
    height: 100%;
  }

  ul {
    height: 100%;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 2em;
    font-weight: 500;
  }

  li {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    border-bottom: 3px solid transparent;
  }

  li:hover {
    border-bottom: 3px solid var(--secondary-bg-color);
  }

  .active__header {
    border-bottom: 3px solid var(--secondary-bg-color);
  }
</style>
