---
import '../styles/global.css'
import logo from '../assets/karmen-logo-sort.png'
import {Image, Picture} from '@astrojs/image/components'
---

<header>
  <Image src={logo} format='svg' width='117px' height='50px' alt="Logo for Karmen webshop" />
  <nav>
    <ul>
      <li><a href="">Forside</a></li>
      <li><a href="">Produkter</a></li>
      <li><a href="">Mere info</a></li>
      <li><a href="">Kurv</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: var(--primary-bg-color-pink);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    height: 60px;
  }

  ul {
    display: flex;
    gap: calc(4em - 4px);
    list-style-type: none;
  }

  a {
    text-decoration: none;
    color: inherit;
  }
</style>