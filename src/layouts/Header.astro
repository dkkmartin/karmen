---
import '../styles/global.css';
import logo from '../assets/karmen-logo-sort.png';
import menu from '../assets/menu.svg';
import { Image, Picture } from '@astrojs/image/components';
---

<script>
  const listLink1 = document.querySelector('.li__1');
  const listLink2 = document.querySelector('.li__2');
  const listLink4 = document.querySelector('.li__4');
  const menuBtn = document.querySelector('.menu__btn');
  const menuNav = document.querySelector('nav');

  if (document.URL.includes('karmen/produkter')) {
    listLink2.classList.add('active__header');
  } else if (document.URL.includes('karmen/produkt')) {
    listLink2.classList.add('active__header');
  } else if (document.URL.includes('karmen/kurv')) {
    listLink4.classList.add('active__header');
  } else if (document.URL.includes('karmen/betaling')) {
    listLink4.classList.add('active__header');
  } else if (document.URL.includes('karmen/tak')) {
    listLink4.classList.add('active__header');
  } else {
    listLink1.classList.add('active__header');
  }

  menuBtn.addEventListener('click', () => {
    menuNav.classList.toggle('nav--active');
  });
</script>

<header id="top">
  <Image format={'webp'} src={logo} width={117} height={50} alt="Logo for Karmen webshop" />
  <Image class="menu__btn" format={'svg'} src={menu} width={35} height={30} alt="Menu knap" />
  <nav>
    <ul>
      <li class="li__1"><a href="/karmen/">Forside</a></li>
      <li class="li__2"><a href="/karmen/produkter/">Produkter</a></li>
      <li class="li__3"><a href="">Mere info</a></li>
      <li class="li__4"><a href="/karmen/kurv/"><i class="fa-solid fa-cart-plus"></i>Kurv</a></li>
    </ul>
  </nav>
</header>

<style>
  .menu__btn {
    display: none;
  }

  .nav--active {
    display: flex;
  }

  header {
    background-color: var(--primary-bg-color-pink);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    height: 60px;
    max-width: 1440px;
    margin: 0 auto;
  }

  nav {
    display: flex;
    align-items: center;
    height: 100%;
  }

  ul {
    height: 100%;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 2em;
    font-weight: 500;
  }

  li {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    border-bottom: 3px solid transparent;
  }

  li:hover {
    border-bottom: 3px solid var(--secondary-bg-color);
  }

  .active__header {
    border-bottom: 3px solid var(--secondary-bg-color);
  }

  @media only screen and (max-width: 450px) {
    .menu__btn {
      display: block;
    }

    nav {
      display: none;
      justify-content: center;
      position: absolute;
      top: 0;
      height: 100vh;
      width: 100vw;
      background-color: var(--primary-bg-color-pink);
    }

    ul {
      flex-direction: column;
      justify-content: center;
      gap: 5em;
      width: 100%;
    }

    li {
      height: initial;
      width: 100%;
      font-size: 40px;
    }

    header {
      justify-content: space-around;
    }

    .active__header {
      border: none;
    }
  }
</style>
