---
import '../styles/global.css';
import Header from '../layouts/Header.astro';
import Footer from '../layouts/Footer.astro';

// Props for SEO
const { title, description = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/karmen/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/karmen/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/karmen/favicon-16x16.png" />
    <link rel="manifest" href="/karmen/site.webmanifest" />
    <link rel="mask-icon" href="/karmen/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <script src="https://kit.fontawesome.com/42e26b8656.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
